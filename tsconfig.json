{
    "compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
        "module": "esnext",
        "target": "es5",
        // "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
		"noEmitOnError": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
        "pretty": true,
        "noEmit": true,
        "lib": ["DOM"],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
